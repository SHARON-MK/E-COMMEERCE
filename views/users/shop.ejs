<%- include('../partials/users/header.ejs') %>


    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-5">

                    <div class="sidebar">

                        <div class="hero__categories">
                            <div class="filter__sort">
                                <span>Sort by price</span>
                                <select name="price" id="price" onchange="location ='/shop?value='+value+'&category=<%= Category %>&search=<%= Search %>'" >
                                    <% if(price == "High"){ %>
                                        <option value="Low"> Low To High</option>
                                        <option value="High" selected>High To Low</option>
                                    <%} else {%>
                                        <option value="Low" selected> Low To High</option>
                                        <option value="High">High To Low</option>
                                    <%} %>
                                </select>
                            </div>

                            <div class="hero__categories__all">
                                <i class="fa fa-bars"></i>
                                <span>Filter Category</span>
                            </div>
                            <ul>
                                <% categoryData.forEach((value,index)=>{ %>

                                    <li><a href="/shop?category=<%= value.name %>&value=<%= price %>&search=<%= Search %>">
                                            <%=value.name%>
                                        </a></li>

                                    <%}) %>

                            </ul>
                            <a href="/shop" style="text-decoration: none; color: black;">remove all filters<span class="icon_close"></span></a>
                           
                        </div>

                    </div>
                </div>
                <div class="col-lg-9 col-md-7">
                    <div class="filter__item">
                        <div class="row">
                            <div class="hero__search">
                               
                                <div class="hero__search__form">
                                    

                                    <form action="/shop?value=<%= price %>&category=<%= Category %>" method="get">
                                        <input type="text" name="search" placeholder="Which book you are looking for?">
                                        <button type="submit" class="site-btn">SEARCH</button>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <% if(productData.length>0){
                            for(let i=0;i < productData.length;i++){ %>
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg"
                                        data-setbg="../productimages/<%=productData[i].image[0]%>">
                                        <ul class="product__item__pic__hover">
                                            <li><a href="/product?id=<%= productData[i]._id%>"><i
                                                        class="fa fa-eye view-btn"></i></a></li>
                                            <li><a href='#' onclick="show('<%-productData[i]._id%>')"><i
                                                        class="fa fa-shopping-cart"></i></a></li>
                                            <li><a onclick="addtoWishlist('<%-productData[i]._id%>')"><i
                                                        class="fa fa-heart love-btn"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="product__item__text">
                                        <h6><a href="#"><%=productData[i].name %></a></h6>
                                        <h5><%=productData[i].price %></h5>
                                    </div>
                                </div>
                            </div>
                            <% } } %>
                    </div>
                    <!-- <div class="product__pagination">
                        <a href="#">1</a>
                        <a href="#">2</a>
                        <a href="#">3</a>
                        <a href="#"><i class="fa fa-long-arrow-right"></i></a>
                    </div> -->
                </div>
            </div>
        </div>
    </section>
    <!-- Product Section End -->

    <%- include('../partials/users/footer.ejs') %>