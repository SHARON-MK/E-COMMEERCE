    <script>
        function show(id) {
            $.ajax({
                url: "/addToCart",
                method: "post",
                data: {
                    id: id
                },
                success: (response) => {
                    if (response.success) {
                        swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: 'product added to cart',
                            showConfirmButton: false,
                            timer: 1500
                        });
                    }
                },
                error: (xhr) => {
                    if (xhr.status === 401) {
                        window.location.href = '/login';
                    }
                }
            });
        }

        function addtoWishlist(id) {
            console.log(id)
            $.ajax({
                url: '/addtowhishlist',
                method: 'post',
                data: {
                    id: id
                },
                success: (response) => {
                    if (response.status) {
                        Swal.fire({
                            icon: 'success',
                            title: 'product added to wishlist',
                            showConfirmButton: false,
                            timer: 1000,

                        })

                    } else if (response.productExit) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Product already added to wishlist',
                            showConfirmButton: false,
                            timer: 1000

                        })

                    }
                    else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Plz SignIn!',
                            showConfirmButton: false,
                            timer: 1000
                        })

                    }
                }

            })
        }

    </script>



